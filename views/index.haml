%html
  %head
    %title= 'Partille tennis'
  %body
    %div
      %div{:style => "float: left;margin-right: 20px;background-color: red;"}
        %div
          %a(href="/foretagstennis/1") Division 1
        %div
          %a(href="/foretagstennis/2") Division 2
        %div
          %a(href="/foretagstennis/3") Division 3

      %div{:style => "float: left;width: 90%;background-color: blue;"}
        %table{:style => "width: 100%;"}
          %tr
            %th= 'Ranking'
            %th= 'Team'
            %th= 'Kontakt'
            %th= 'Telefon'
            %th= 'Epost'
          - teams.each do |team|
            %tr
              %td{:style => "text-align: center;"}= team[:team_ranking]
              %td{:style => "text-align: center;"}= team[:team_name]
              %td{:style => "text-align: center;"}= team[:contact]
              %td{:style => "text-align: center;"}= team[:phone]
              %td{:style => "text-align: center;"}= team[:email]
        %hr
        %table{:style => "width: 80%;"}
          %tr
            %th= 'Datum'
            %th= 'Tid'
            %th= 'Lag'
            %th= 'Banor'
          - matches.each do |match|
            %tr
              %td{:style => "text-align: center;"}= match[:date]
              %td{:style => "text-align: center;"}= match[:time]
              %td{:style => "text-align: center;"}= "#{match[:home_team]}-#{match[:away_team]}"
              %td{:style => "text-align: center;"}= match[:lanes]
